<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.vam.mapper.MemberMapper">
  	
  	<!-- 회원가입 -->
  	<insert id="memberJoin">
  		insert into class_member values(#{memberId}, #{memberPw}, #{memberName}, #{memberMail}, #{memberAddr1}, #{memberAddr2}, #{memberAddr3}, 0, sysdate(), 100000, 5000 )
  	</insert>
  	
  	<!-- 아이디 중복검사 -->
  	<select id = "idCheck" resultType = "int">
  	
  		select count(*) from class_member where memberId = #{memberId}
  	</select>
  	
  	<!-- 로그인 -->
  	<select id = "memberLogin" resultType="com.vam.model.MemberVO">
  	
	  select memberId, memberPw, memberName, adminCk, money, point from class_member where memberId = #{memberId} 
  	  <!--  select memberId, memberName, adminCk, money, point from class_member where memberId = #{memberId} and memberPw = #{memberPw} -->
  	</select>
  	
  	
  </mapper>